@model SistemaPedidos.Models.Pedido

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Prato" class="control-label"></label>
                <input asp-for="Prato" class="form-control" />
                <span asp-validation-for="Prato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bebida" class="control-label"></label>
                <input asp-for="Bebida" class="form-control" />
                <span asp-validation-for="Bebida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mesa" class="control-label"></label>
                <input asp-for="Mesa" class="form-control" />
                <span asp-validation-for="Mesa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeDoSolicitante" class="control-label"></label>
                <input asp-for="NomeDoSolicitante" class="form-control" />
                <span asp-validation-for="NomeDoSolicitante" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status">
                    <option value="0">Pendente</option>
                    <option value="1">VisualizadoPelaCozinha</option>
                    <option value="2">PegandoBebidaNaCopa</option>
                    <option value="3">PratoPronto</option>
                    <option value="4">Entregue</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
