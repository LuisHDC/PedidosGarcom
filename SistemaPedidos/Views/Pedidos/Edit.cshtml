@model SistemaPedidos.Models.ViewModels.PedidosViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pedido.Prato" class="control-label"></label>
                <select asp-for="Pedido.PratoId" asp-items="@(new SelectList(Model.Pratos, "Id",
            "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.Bebida" class="control-label"></label>
                <select asp-for="Pedido.BebidaId" asp-items="@(new SelectList(Model.Bebidas, "Id",
            "Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.Mesa" class="control-label"></label>
                <input asp-for="Pedido.MesaId" class="form-control" readonly="@(true)"/>
                <span asp-validation-for="Pedido.MesaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.NomeDoSolicitante" class="control-label"></label>
                <input asp-for="Pedido.NomeDoSolicitante" class="form-control" />
                <span asp-validation-for="Pedido.NomeDoSolicitante" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Pedido.Id" />
            <div class="form-group">
                <label asp-for="Pedido.Data" class="control-label"></label>
                <input asp-for="Pedido.Data" class="form-control" />
                <span asp-validation-for="Pedido.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.Status" class="control-label"></label>
                <select asp-for="Pedido.Status">
                    <option value="0">Pendente</option>
                    <option value="1">VisualizadoPelaCozinha</option>
                    <option value="2">PegandoBebidaNaCopa</option>
                    <option value="3">PratoPronto</option>
                    <option value="4">Entregue</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
